# ============================================
# WinScan Environment Variables
# ============================================
# Copy this file to .env and configure for your deployment
# For Vercel: Set these in Project Settings > Environment Variables

# ============================================
# SSL Backend Configuration (REQUIRED for WinSnip deployment)
# ============================================
# These are WinSnip's custom SSL backend endpoints
# If you're forking this project, you can:
# 1. Use your own backend API (set your URLs below)
# 2. Leave empty to use RPC/API from chain config files directly
API_URL=https://ssl.winsnip.xyz
API_URL_FALLBACK=https://ssl2.winsnip.xyz

# ============================================
# Public API Configuration
# ============================================
# Frontend will use these URLs for API calls
NEXT_PUBLIC_API_URL=https://ssl.winsnip.xyz
NEXT_PUBLIC_API_URL_FALLBACK=https://ssl2.winsnip.xyz
NEXT_PUBLIC_BACKEND_URL=https://ssl.winsnip.xyz
NEXT_PUBLIC_WINSCAN_URL=https://winscan.winsnip.xyz

# ============================================
# API Timeouts & Performance
# ============================================
NEXT_PUBLIC_API_TIMEOUT=8000
NEXT_PUBLIC_CACHE_TTL=30000

# ============================================
# Polling Intervals (milliseconds)
# ============================================
# How often to refresh data on each page
NEXT_PUBLIC_POLL_VALIDATOR_DETAIL=30000
NEXT_PUBLIC_POLL_VALIDATORS=30000
NEXT_PUBLIC_POLL_OVERVIEW=20000
NEXT_PUBLIC_POLL_BLOCKS=15000
NEXT_PUBLIC_POLL_TRANSACTIONS=15000
NEXT_PUBLIC_POLL_UPTIME=30000

# ============================================
# Homepage Configuration
# ============================================
# Set to 1 to disable homepage and redirect to default chain
# NEXT_PUBLIC_DISABLE_HOMEPAGE=0
NEXT_PUBLIC_DEFAULT_CHAIN=paxi-mainnet

# ============================================
# Domain Whitelist (Optional)
# ============================================
# Comma-separated list of allowed domains
# Leave empty to allow all domains
# Example: winscan.org,winscan.winsnip.xyz,localhost
NEXT_PUBLIC_ALLOWED_DOMAINS=

# ============================================
# IMPORTANT NOTES FOR FORKERS:
# ============================================
# 1. If you don't have a custom backend, you can leave API_URL empty
#    The app will automatically use RPC/API from Chains/*.json files
#
# 2. For Vercel deployment:
#    - Go to Project Settings > Environment Variables
#    - Add all NEXT_PUBLIC_* variables above
#    - Click Save and Redeploy
#
# 3. For local development:
#    - Copy this file to .env
#    - Update values as needed
#    - Run: npm run dev
